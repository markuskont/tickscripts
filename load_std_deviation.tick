var warn_threshold = 3
var crit_threshold = 5

var memory = stream
  |from()
    .database('telegraf')
    .retentionPolicy('default')
    .measurement('system')
    .groupBy('host')

memory
  |alert()
    .id('[kapacitor] {{ index .Tags "host"}}')
    .message('{{ .ID }} is {{ .Level }} value:{{ index .Fields "load1" }}')
    .warn(lambda: sigma("load1") > warn_threshold)
    .crit(lambda: sigma("load1") > crit_threshold)
    .stateChangesOnly()
    .log('/var/log/kapacitor/alerts.log')
